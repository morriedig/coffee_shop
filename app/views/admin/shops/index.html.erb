<div class="new_shop">
  <%= render :partial => "form", :locals => {shop: @new_shop} %>
</div>

<ul id="shop_list">
  <% @shops.each do |shop| %>
    <%= render :partial => "shop_list", :locals => {shop: shop} %>
  <% end %>
</ul>