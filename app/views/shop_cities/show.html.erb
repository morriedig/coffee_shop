<%= render :partial => 'shared/header' %>

<div class="container">
  <div id="shops" class="card-deck">
    <div class="row">
      <% @shops.each do |shop| %>
        <%= render :partial => "shared/shop_list", :locals => {shop: shop} %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="text-center offset-lg-3">
        <%= paginate @shops %>
      </div>
    </div>
  </div>
</div>


