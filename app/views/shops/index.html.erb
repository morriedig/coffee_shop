    const url = "https://cafenomad.tw/api/v1.2/cafes";

    function getshop(){
      $.ajax({
        url: url,
        type: "GET",
        success: (result) => {
          // var str = result.age
          console.log(result);
        }
      })
    }

    getshop();

  })
</script>