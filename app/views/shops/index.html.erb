<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">This is Taipei Cafe</h1>
    <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
  </div>
</div>

<div class="container">
  <br>
  <div>
    <%= form_tag(shops_path, :method => "get") do %>
      <div class="row">
        <div class="col-3">
          <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        </div>
        <div class="col-2">
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      </div>
      
      
    <% end %>
  </div>

  <br>

  <div id="shops" class="card-deck">
    <div class="row">
      <% @shops.each do |shop| %>
        <%= render :partial => "shop_list", :locals => {shop: shop} %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cafenomad.tw/api/v1.2/cafes"></script>
<script type="text/javascript" src="https://uinames.com/api/?ext&region=england"></script>

